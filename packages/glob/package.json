{
  "name": "@rust-gear/glob",
  "version": "0.2.2",
  "description": "Node.js bindings for Rust glob library",
  "keywords": [
    "rust-gear",
    "glob",
    "napi",
    "napi-rs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rust-gear-project/rust-gear.git"
  },
  "license": "Apache-2.0",
  "author": "Refirst",
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.mjs",
    "index.d.ts"
  ],
  "napi": {
    "name": "glob",
    "triples": [
      "darwin-arm64",
      "darwin-x64",
      "linux-arm64-gnu",
      "linux-arm64-musl",
      "linux-x64-gnu",
      "linux-x64-musl",
      "win32-x64-msvc",
      "win32-ia32-msvc",
      "win32-arm64-msvc"
    ]
  },
  "scripts": {
    "build": "napi build --platform --release",
    "packages": "node ../../scripts/generate-platform-packages.js",
    "readme": "node ../../scripts/generate-platform-readme.js",
    "test": "node -r kpx test/test.ts"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4"
  },
  "optionalDependencies": {
    "@rust-gear/glob-darwin-arm64": "0.2.1",
    "@rust-gear/glob-darwin-x64": "0.2.1",
    "@rust-gear/glob-linux-arm64-gnu": "0.2.1",
    "@rust-gear/glob-linux-arm64-musl": "0.2.1",
    "@rust-gear/glob-linux-x64-gnu": "0.2.1",
    "@rust-gear/glob-linux-x64-musl": "0.2.1",
    "@rust-gear/glob-win32-arm64-msvc": "0.2.1",
    "@rust-gear/glob-win32-ia32-msvc": "0.2.1",
    "@rust-gear/glob-win32-x64-msvc": "0.2.1"
  }
}
